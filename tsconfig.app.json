{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "baseUrl": "./src/app",
    "types": [],
    "paths": {
      "@shared/*": ["shared/*"],
      "@guards/*": ["guards/*"],
      "@services/*": ["services/*"],
      "@interfaces/*": ["interfaces/*"]
    }
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
